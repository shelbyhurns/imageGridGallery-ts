{
  "name": "basic-image-slider",
  "version": "1.0.0",
  "description": "Flex Grid Gallery built with TypeScript",
  "main": "index.tsx",
  "author": "Shelby Hurns",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "cross-env NODE_ENV=development node server/server.js --color",
    "prod": "cross-env NODE_ENV=production webpack --progress --colors --profile",
    "test": "jest --watchAll --verbose"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/app/_tests_/test_setup.js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "app/**/*",
      "!app/_tests_/*"
    ],
    "moduleNameMapper": {
      "\\.(css|scss)$": "identity-obj-proxy",
      "^app(.*)$": "<rootDir>/app$1"
    }
  },
  "dependencies": {
    "express": "^4.16.3"
  },
  "devDependencies": {
    "@babel/core": "^7.0.1",
    "@types/enzyme": "^3.1.14",
    "@types/jest": "^23.3.2",
    "@types/react": "^16.4.14",
    "@types/react-dom": "^16.0.7",
    "@types/webpack-env": "^1.13.6",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.2",
    "clean-webpack-plugin": "^0.1.19",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest-cli": "^23.6.0",
    "mini-css-extract-plugin": "^0.4.2",
    "morgan": "^1.9.1",
    "node-sass": "^4.9.3",
    "prettier": "^1.14.2",
    "prettier-webpack-plugin": "^1.1.0",
    "react": "^16.5.0",
    "react-dom": "^16.5.0",
    "react-hot-loader": "^4.3.6",
    "react-test-renderer": "^16.5.1",
    "sass-loader": "^7.1.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.0",
    "ts-jest": "^23.1.4",
    "typescript": "^3.0.3",
    "url-loader": "^1.1.1",
    "webpack": "^4.18.0",
    "webpack-cli": "^3.1.0",
    "webpack-dev-middleware": "^3.3.0",
    "webpack-dev-server": "^3.1.8",
    "webpack-hot-middleware": "^2.23.1"
  }
}
